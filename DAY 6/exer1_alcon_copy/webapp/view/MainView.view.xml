<mvc:View controllerName="com.training.exer1alconcopy.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <VBox id="idVBox" class="sapUiSmallMargin">
        <f:SimpleForm id="idSimpleForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>headerDetailsLbl}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <Label id="idLblFName" text="{i18n>firstNameLbl}"  />
                <Input id="idInptFName" value="" />
                <Label id="idLblLName" text="{i18n>lastNameLbl}" />
                <Input id="idInptLName" value="" />
                <Label id="idLblMOP" text="{i18n>mopLbl}" />
                <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                    <items>
                        <core:Item id="idItmCOD" text="{i18n>codLbl}" key="COD"/>
                        <core:Item id="idItmCC" text="{i18n>ccLbl}" key="CC"/>
                        <core:Item id="idItmGCash" text="{i18n>gcashLbl}" key="GCASH"/>
                    </items>
                </Select>
                <Label id="idLblPhone" text="{i18n>numberLbl}" visible="false"/>
                <Input id="idInputPhone" value="" visible="false"/>
                <Label id="idLblCC" text="{i18n>ccDetailsLbl}" visible="false"/>
                <Input id="idInputCC" value="" visible="false"/>

            </f:content>
        </f:SimpleForm>   
    <core:Fragment fragmentName="com.training.exer1alconcopy.fragment.ShoppingCart" type="XML" />
        </VBox>
        <footer>
            <OverflowToolbar id="idOFTFooter">
                <ToolbarSpacer id="idTSpacerFooter"/>
                <Button id="idBtnCheckout" text="{i18n>checkOutLbl}" tooltip="Check Out" press="onPressCheckout"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>